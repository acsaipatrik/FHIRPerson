<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#616468">

        <TextView
            android:id="@+id/personNameTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="@string/PatientName"
            />

        <TextView
            android:id="@+id/personTelecomTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/PatientTelecom"
            android:layout_below="@id/personNameTextView"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/PatientAddressTextText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/PatientAddressEditText"
            android:layout_below="@id/personTelecomTextView"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/PatientBirthDateEditText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="@string/PatientBirthDateEditText"
            android:layout_below="@id/PatientAddressTextText"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/personGenderTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/PatientBirthDateEditText"
            android:text="@string/neme"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/personActiveTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personGenderTextView"
            android:text="@string/allapota"
            android:textSize="20sp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/personActiveTextView"
            android:layout_centerHorizontal="true">

            <Button
                android:id="@+id/updateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:text="@string/update" />

            <Button
                android:padding="10dp"
                android:id="@+id/deleteButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:text="@string/delete"
                />
        </LinearLayout>
    </RelativeLayout>
</androidx.cardview.widget.CardView>